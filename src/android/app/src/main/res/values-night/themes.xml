<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Dark theme definition for ScanMonitorApps
  Optimized for high contrast and readability in low-light stadium environments
  Uses Material Design dark theme components with custom color palette
-->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode -->
    <style name="Theme.ScanMonitor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">#42A5F5</item>
        <item name="colorPrimaryVariant">#2196F3</item>
        <item name="colorOnPrimary">#000000</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">#FFB74D</item>
        <item name="colorSecondaryVariant">#FFA726</item>
        <item name="colorOnSecondary">#000000</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        
        <!-- Error colors -->
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ScanMonitor.Headline1</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ScanMonitor.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.ScanMonitor.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ScanMonitor.Body1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ScanMonitor.Caption</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ScanMonitor.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ScanMonitor.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ScanMonitor.LargeComponent</item>
    </style>
    
    <!-- Typography styles optimized for readability in dark mode -->
    <style name="TextAppearance.ScanMonitor.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.ScanMonitor.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    
    <style name="TextAppearance.ScanMonitor.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    
    <style name="TextAppearance.ScanMonitor.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    
    <style name="TextAppearance.ScanMonitor.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    
    <!-- Shape appearance styles for components -->
    <style name="ShapeAppearance.ScanMonitor.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.ScanMonitor.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.ScanMonitor.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    
    <!-- No Action Bar theme variant -->
    <style name="Theme.ScanMonitor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- App bar overlay -->
    <style name="Theme.ScanMonitor.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Ensures text and icons are properly visible against app bar in dark mode -->
        <item name="colorOnPrimary">#000000</item>
    </style>
    
    <!-- Popup overlay -->
    <style name="Theme.ScanMonitor.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Ensures consistent styling for popups and dialogs in dark mode -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
    </style>
</resources>